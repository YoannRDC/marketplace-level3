<h1 class="text-center">Market place</h1>

<div class="container">
    <h1>Sell orders</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Side</th>
            <th>Price</th>
            <th>Amount of BTC</th>
            <th>User email</th>
            <th>Date of creation</th>
        </tr>
        </thead>
        <tbody>
        <% @sells.each do |order| %> 
            <tr>
                <td><%= order.side %></td>
                <td><%= order.price_per_btc %></td>
                <td><%= order.btc_amount %></td>
                <td><%= order.user.email %></td>
                <td><%= order.updated_at %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>

<h2 class="text-center">Average order price: <%= @avg_price%> </h2>

<div class="container">
    <h1>Buy orders</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Side</th>
            <th>Price</th>
            <th>Amount of BTC</th>
            <th>User email</th>
            <th>Date of creation</th>
        </tr>
        </thead>
        <tbody>
        <% @buys.each do |order| %> 
            <tr>
                <td><%= order.side %></td>
                <td><%= order.price_per_btc %></td>
                <td><%= order.btc_amount %></td>
                <td><%= order.user.email %></td>
                <td><%= order.updated_at %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
<br>
<div class="container">
    <h1>Filled orders</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Side</th>
            <th>Price</th>
            <th>Amount of BTC</th>
            <th>Buy type</th>
            <th>User email</th>
            <th>Date of creation</th>
        </tr>
        </thead>
        <tbody>
        <% @filled.each do |order| %> 
            <tr>
                <td><%= order.side %></td>
                <td><%= order.price_per_btc %></td>
                <td><%= order.btc_amount %></td>
                <td><%= order.buy_type %></td>
                <td><%= order.user.email %></td>
                <td><%= order.updated_at %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
<br>
<div class="container">
    <h1>Market place stats</h1>
    <table class="table">
        <thead>
        <tr>
            <th>User</th>
            <th>Value [EUR : BTC]</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td> Total (Market place)</td>
                <td><%= @total_market_eur %> : <%= @total_market_btc %></td>
            </tr>          
            <% @users.each do |user| %> 
                <tr>
                    <td><%= user.email %> balance</td>
                    <td><%= user.eur_balance %> : <%= user.btc_balance %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>